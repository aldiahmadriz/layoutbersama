<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanif.layoutkolaborasi.MainActivity">


    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="center"
        android:src="@drawable/sb"
        android:id="@+id/bg" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Sponge bob"
        android:background="#fafafa"
        android:id="@+id/text1"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/squid"
        android:layout_below="@id/text1"
        android:id="@+id/doraemon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doraemon"
        android:textSize="20dp"
        android:text="Squidward tiba tiba menjadi periang, Ini semua karena krusty krab berubah menjadi krabby o mondays dengan bos barunya yang kejam"
        android:background="#fafafa"
        android:id="@+id/txtdora"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/txtdora"
        android:scaleType="centerCrop"
        android:src="@drawable/s"/>



</RelativeLayout>
